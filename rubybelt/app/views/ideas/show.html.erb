<p><%= @user.alias %> says:</p>
<p><%= @idea.content %></p>

<h3>People who liked this post:</h3>
<table>
	<thead>
		<th>Alias</th>
		<th>Name</th>
	</thead>
	<tbody>
		<% @likes.each do |like| if like.idea_id == @idea.id %>
		<tr>
			<td><a href="users/<%= like.user.id %>"><%= like.user.alias %></a></td>
			<td><%= like.user.name %></td>
		</tr>
		<% end %>
		<% end %>
	</tbody>
</table>
<div id ="nav"> 
<a href="/ideas">Back to Ideas Dashboard</a>
<a href="/sessions" data-method="delete" class="logout"> Logout</a>
</div>